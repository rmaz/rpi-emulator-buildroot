        </component>

        <component>
                <type>image</type>
                <path>./gbc_art/plastic_glare.png</path>
                <pos>.5 .5</pos>
                <dim>0 1</dim>
		<origin>1 .5</origin>
		<useAlpha />
        </component>

        <component>
                <type>image</type>
                <path>./gbc_art/gbc_logo.png</path>
                <pos>.25 0</pos>
                <dim>0 .125</dim>
		<origin>.5 0</origin>
		<useAlpha />
        </component>
